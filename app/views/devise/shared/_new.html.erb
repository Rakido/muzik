<div class="modal-dialog modal-sm">
  <div class="modal-content text-center">
    <div class="modal-header">
      <button class="close" data-dismiss="modal">x</button>
      <%= image_tag("logo.png",  class: "sign-logo") %>
      <h4 class="sign-subtitle">Connectez-vous</h4>
    </div>
    <div class="modal-body form-inputs text-left">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-inputs text-left">
        <%= f.email_field :email, autofocus: true, placeholder: 'Entrer votre email', class: "input" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Mot de passe', class: "input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="form-actions">
        <%= f.submit "Se connecter", class: "button-cta button-cta-sign" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


  