<div class="banner" style="background-image: linear-gradient(-19deg, rgba(238,238,238,0.01) 0%, #D43F3F 100%), url(<%= image_path('homepage.jpg') %>;">

  <div class="banner-content">
    <h1>La müzik à portée de main</h1>
    <h3 style="margin-top: 5vh;">Louez ou proposez des instruments dans votre ville</h3>
    <form class="form-inline" style="margin-top: 6vh;" action="<%=instruments_path%>">
      <div class="form-group mb-2">
        <%= select("instrument", "category", Instrument::CATEGORIES, {include_blank: 'Choisissez un instrument'}) %>
      </div>
      <!-- ville -->
      <div class="form-group mx-sm-3 mb-2">
        <input type="text" class="form-control form-input text-input" name="city" placeholder="Tapez une ville">
      </div>
      <!-- Date -->
      <!--   <input type="text" class="form-control form-input text-input" placeholder="Début"> -->
      <div class="form-group mx-sm-3 mb-2">
        <input class="form-control form-input text-input" data-provide='datepicker' placeholder="Début">
      </div>

      <div class="form-group mx-sm-3 mb-2">
        <input class="form-control form-input text-input" data-provide='datepicker' placeholder="Fin">
      </div>
      <br>
      <button type="submit" class="btn mb-2 cta-home-search" style="margin-top: 5vh;">Rechercher</button>
  </form>

  </div>

</div>
<div class="container">
  <div class="row text-center section-home marged-top elements flex-center">
    <div class="col-md-4">

      <%= image_tag("Trouvez.png", width: "175", alt: "Edit Entry") %>
      <h2>Trouvez</h2>
      <div class="underline" style="margin-bottom: 2vh;"></div>
      <p class="home-text">Trouvez l'instrument qu'il vous faut, à deux pas de chez vous.</p>
    </div>

    <div class="col-md-4">
      <%= image_tag("Louez.png", width: "175", alt: "Edit Entry") %>
      <h2>Louez</h2>
      <div class="underline" style="margin-bottom: 2vh;"></div>
      <p class="home-text">Louez votre matériel en deux clics. Un jour, une semaine, un mois, à vous de choisir !</p>
    </div>

    <div class="col-md-4">
      <%= image_tag("Rencontrez.png", width: "175", alt: "Edit Entry") %>
      <h2>Rencontrez</h2>
      <div class="underline" style="margin-bottom: 2vh;"></div>
      <p class="home-text"> Rencontrez des musiciens, heureux de faire partager leur passion.</p>
    </div>
  </div>

</div>
  <div class="wrapper-home text-center">
    <div class="elements">
    <h2 class="home-text-shadow" style="margin-bottom: 3vh;">Déposez une annonce</h2>
    <h4 class="home-text-shadow" style="margin-bottom: 3vh;"> Et rejoignez une large communauté de musiciens</h4>
    <%= link_to t(".sign_up", default: "Pouêt-Pouêt"), '#', "data-toggle" => "modal", "data-target"=>"#modaldevise-sign", class:'btn cta-home'%>
  </div>
  </div>
 <div class="container">
  <div class="section-home">
    <div class="col-md-12">
      <h2 class= "text-center"> Les derniers instruments proposés</h2>
      <div class="underline" style="margin-bottom: 3vh;"></div>
    </div>

    <%  @last_instruments.each do |instrument| %>
      <div class="col-xs-12 col-sm-3 text-center">
        <div class="card">
           <% if instrument.photo.url.nil?%>
            <div class="card-image" style="background-image: url('assets/default-instrument.png')"></div>
          <% else %>
            <div class="card-image" style="background-image: url('<%=image_path instrument.photo%>')"></div>
          <% end %>
          <div class="card-description">

            <!-- User name -->
            <h6 class="card-user-name"><%= instrument.user.first_name %> <%= instrument.user.last_name %></h6>
            <!-- Name of annonce -->
            <h5 class="card-user-instrument"><%= link_to instrument.name, instrument_path(instrument) %></h5>
            <!-- Résumé de l'annonce peut-être mettre une limite de caractère -->
            <p class="card-resume"><%= truncate(instrument.description, length: 80) %></p>

          </div>

          <div class="card-footer">
            <div class="row">
              <div class="col-sm-2 card-price">
                  <!-- Price de l'annonce -->
                  <%= link_to instrument.price, instrument_path(instrument)%>€/jour

              </div>
                </div>
              </div>

            <!-- Image de l'utilisateur -->
            <% if instrument.user.avatar.nil? %>
                  <%= image_tag('logo.png') %>
                <% else %>
                  <%= cl_image_tag instrument.user.avatar, crop: :fill, class: "card-user" %>
                <% end %>
             <!-- <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
             <%= link_to '', instrument_path(instrument), class: "card-link"  %>
            <!-- <a class="card-link" href="#" ></a> -->
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="wrapper-home text-center">
    <div class="elements">
      <div class="col-md-4">
        <h2 class="home-text-shadow">Anatroll Gonon</h2>
        <p class="home-text-shadow">Expert en xylophone depuis 1998</p>
      </div>

      <div class="col-md-4">
        <h2 class="home-text-shadow">Harday Taskar</h2>
        <p class="home-text-shadow">Sa passion? La flûte de pan</p>
      </div>

      <div class="col-md-4">
        <h2 class="home-text-shadow">JJ Bernardo</h2>
        <p class="home-text-shadow"> Grand prix de Triangle en 1979 à Berlin </p>
      </div>
    </div>
  </div>
</div>

