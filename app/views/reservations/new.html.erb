<div class="container" style="height:90vh;">
  <%= simple_form_for [@instrument, @reservation] do |f| %>

  <div class="row results">
    <div class="col-xs-12 col-md-7 ">

      <div class="col-md-1 user-avatar">
        <%= cl_image_tag @instrument.user.avatar, height: 48, crop: :fill, class: 'avatar-pics' %>
      </div>
      <div class="col-md-4 user-info" style="margin-left: 20px">
        <h4><%=@instrument.user.first_name %> <%= @instrument.user.last_name %></h4>
        Inscrit le <%= @instrument.user.created_at.strftime('%m/%d/%Y') %>
      </div>

      <div class="underline" style="margin-top: 80px;"></div>
      <div class="col-xs-10 primary-text">
        <h2 class="primary-text"><%= @instrument.name %></h2>
      </div>
      <div class="col-xs-2 text-right">
        <h2 class="primary-text light"><%= @instrument.price %> €</h2>
      </div>
      <div class="underline" style="margin-top: 80px;"></div>
      
      <div class="col-md-12 description">
        <%= f.input :message, placeholder: "Envoyer un message à l'utilisateur à propos de son instrument."%>
      </div>
    </div>

    <div class="col-xs-12 col-md-4 col-md-offset-1">
        <div class="col-xs-12">
          <div class="form-control form-input text-input" style="padding-top: 12px; margin-bottom:12px;"><%= @instrument.name %></div>
        </div>
        <div class="col-xs-12">
          <div class="form-control form-input text-input" style="padding-top: 12px; margin-bottom:12px;"><%= @instrument.category %></div>
        </div>

        <div class="col-xs-6">
          <%= f.input :start_date %>
        </div>
        <div class="col-xs-6">
          <%= f.input :end_date %>
        </div>
        <div class="col-xs-12">
          <%= f.submit 'Envoyer ma réservation', class: 'btn show-cta cta-input' %>
        </div>
      <% end %>
    </div>
  </div>
</div>









