<div class="container">

  <div class="row results">
    <div class="col-xs-12 col-md-7 ">
      <div class="col-md-1 user-avatar">
        <%= cl_image_tag @instrument.user.avatar, height: 48, crop: :fill, class: 'avatar-pics' %>
      </div>
      <div class="col-md-4 user-info" style="margin-left: 20px ">
        <h4><%=@instrument.user.first_name %> <%= @instrument.user.last_name %></h4>
        <!-- <p>Inscrit le 12.08.2018</p> -->
        Inscrit le <%= @instrument.user.created_at.strftime('%m/%d/%Y') %>
      </div>

      <div class="underline" style="margin-top: 80px;"></div>
      <div class="col-xs-10 primary-text">
        <h2 class="primary-text"><%= @instrument.name %></h2>
      </div>
      <div class="col-xs-2 text-right">
        <h2 class="primary-text light"><%= @instrument.price %> â‚¬</h2>
      </div>
      <div class="underline" style="margin-top: 80px;"></div>
      
      <div class="col-xs-6 col-md-3 input">
        <p class="text-input"><%= @instrument.category %></p>
      </div>

      <div class="col-xs-6 col-md-5 input">
        <p class="text-input"><%= @instrument.city %></p>
      </div>

      <div class="col-xs-6 col-md-2 input">
        <p class="text-input">12 Juin</p>
      </div>

      <div class="col-xs-6 col-md-2 input">
        <p class="text-input">15 Juin</p>
      </div>

      <div class="col-md-12 description">
        <p> <%= @instrument.description %></p>
      </div>

    </div>

    <div class="col-xs-12 col-md-4 col-md-offset-1">
      <%= cl_image_tag @instrument.photo, height: 420, width: 320, crop: :fill, class: 'show-image' %>
      <button class="btn show-cta cta-input">Faire une demande</button>
    </div>
  </div>
</div>


