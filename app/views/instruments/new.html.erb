<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h1>Ajouter un instrument</h1>

      <%= simple_form_for @instrument do |f| %>
        <%= f.input :name %>
        <%= f.input :category, collection: Instrument::CATEGORIES, as: :select%>
        <%= f.input :city %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :photo%>
        <%= f.submit 'Ajouter', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

