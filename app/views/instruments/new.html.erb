<div class="container">

  <div class="row results">
    <%= simple_form_for @instrument do |f| %>
    <div class="col-xs-12 col-md-7 ">

      <div class="col-md-1">
          <%= cl_image_tag current_user.avatar, height: 48, width: 48, crop: :fill, class: "avatar-pics" %>
      </div>

      <div class="col-md-4 user-info" style="margin-left: 20px ">
        <h4 class="primary-text"><%=current_user.first_name %> <%= current_user.last_name %></h4>
        <p>Inscrit <%= current_user.created_at.strftime("%d.%m.%y") %></p>
      </div>

      <div class="underline" style="margin-top: 80px;"></div>
      <div class="col-xs-10 primary-text">
        <h2 class="primary-text">
            <%= f.input :name,  placeholder: "Titre de l'annonce" %>
      </div>
      <div class="col-xs-2 text-right">
        <h2 class="primary-text light">
            <%= f.input :price,  placeholder: 'Tarif/jour' %>
        </h2>
      </div>
      <div class="underline" style="margin-top: 80px;"></div>

      <div class="col-xs-6 col-md-3 input">
            <%= f.input :category, placeholder: 'Catégorie', collection: Instrument::CATEGORIES, as: :select %>

      </div>

      <div class="col-xs-6 col-md-5 input">

            <%= f.input :city, placeholder: 'Ville'%>
      </div>

      <div class="col-xs-6 col-md-2 input">
        <p class="text-input">12 Juin</p>
      </div>

      <div class="col-xs-6 col-md-2 input">
        <p class="text-input">15 Juin</p>
      </div>

      <div class="col-md-12 description">
        <p>
            <%= f.input :description, placeholder: 'Description de votre annonce' %>
        </p>
      </div>

    </div>

    <div class="col-xs-12 col-md-4 col-md-offset-1">
        <%= f.input :photo, class: "preview" %>
        <div id="preview">
          <img src="http://saveabandonedbabies.org/wp-content/uploads/2015/08/default-300x169.png" alt>

          <script src="http://code.jquery.com/jquery-3.1.0.min.js"
          integrity="shaa256-cCueBR6CsyA4/9szpPfrX3s49M9vUU58gtiJj06wt/s="
          crossorigin="anonymous">
         </script>

         <script type="text/javascript">
          function readURL(input){
           if(input.files && input.files[0]){
            var reader = new FileReader();
            reader.onload = function(e){
             $('#preview img').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
           }
          }
          $(document).on('change','input[type="file"]',function(){
           readURL(this);
          });
         </script>
        </div>

        <%= f.submit 'Déposer mon instrument', class: 'btn show-cta cta-input' %>
      <% end %>
    </div>
  </div>
</div>



